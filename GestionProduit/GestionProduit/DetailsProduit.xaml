<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GestionProduit.Pages.ProduitDetailsPage"
             Title="Détails du Produit">
    <StackLayout Padding="20" Spacing="15">
        <!-- Titre -->
        <Label Text="Titre :" FontAttributes="Bold" FontSize="20" />
        <Label Text="{Binding Title}" FontSize="18" />

        <!-- Description -->
        <Label Text="Description :" FontAttributes="Bold" FontSize="20" />
        <Label Text="{Binding Description}" FontSize="18" />

        <!-- Prix -->
        <Label Text="Prix :" FontAttributes="Bold" FontSize="20" />
        <Label Text="{Binding Prix, StringFormat='{0:C}'}" FontSize="18" />

        <!-- Quantité -->
        <Label Text="Quantité :" FontAttributes="Bold" FontSize="20" />
        <Label Text="{Binding Quentiter}" FontSize="18" />

        <!-- Date de Création -->
        <Label Text="Date de Création :" FontAttributes="Bold" FontSize="20" />
        <Label Text="{Binding DateCreation, StringFormat='{0:dd/MM/yyyy}'}" FontSize="18" />
    </StackLayout>
</ContentPage>
