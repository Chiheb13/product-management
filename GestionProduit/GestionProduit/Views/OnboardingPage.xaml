<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GestionProduit.OnboardingPage"
             BackgroundColor="Black">
    <Grid>
        <!-- Background Image -->
        <Image Source="https://www.training.com.au/wp-content/uploads/admin-worker-vector.png"
               Aspect="AspectFill"
               HorizontalOptions="FillAndExpand"
               VerticalOptions="FillAndExpand" />

        <!-- Overlay Content -->
        <StackLayout VerticalOptions="Center" HorizontalOptions="FillAndExpand" Padding="20">
            <Label Text="Welcome Back!" 
                   FontSize="36" 
                   FontAttributes="Bold" 
                   TextColor="White" 
                   HorizontalTextAlignment="Center" />

            <Label Text="Today is a new day. It's your day. Start managing your projects." 
                   FontSize="16" 
                   TextColor="White" 
                   HorizontalTextAlignment="Center" 
                   Margin="0,10,0,20" />

            <Button Text="Sign In"
                    FontSize="18"
                    TextColor="Black"
                    BackgroundColor="White"
                    CornerRadius="20"
                    HeightRequest="50"
                    Clicked="OnLoginClicked" />
        </StackLayout>
    </Grid>
</ContentPage>
